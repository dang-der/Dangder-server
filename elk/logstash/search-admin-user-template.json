{
  "template": "adminUser",
  "index_patterns": ["search-admin-user-*"],
  "settings": {
    "analysis": {
      "analyzer": {
        "admin-user_analyzer": {
          "tokenizer": "my_ngram_tokenizer"
        }
      },
      "tokenizer": {
        "my_ngram_tokenizer": {
          "type": "nGram",
          "min_gram": "1",
          "max_gram": "10"
        }
      }
    },
    "max_ngram_diff": "20"
  },
  "mappings": {
    "properties": {
      "adminUser": {
        "type": "text",
        "analyzer": "admin-user_analyzer"
      }
    }
  }
}
