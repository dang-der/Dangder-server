{
  "template": "user",
  "index_patterns": ["*"],
  "settings": {
    "analysis": {
      "analyzer": {
        "user_analyzer": {
          "tokenizer": "my_ngram_tokenizer"
        }
      },
      "tokenizer": {
        "my_ngram_tokenizer": {
          "type": "nGram",
          "min_gram": "1",
          "max_gram": "10"
        }
      }
    },
    "max_ngram_diff": "20"
  },
  "mappings": {
    "properties": {
      "email": {
        "type": "text",
        "analyzer": "my_ngram_analyzer"
      }
    }
  }
}
